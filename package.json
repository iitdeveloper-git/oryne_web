{
  "name": "oryne-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lighthouse": "lhci autorun",
    "lighthouse:mobile": "lighthouse http://localhost:3000 --preset=mobile --view --only-categories=performance,accessibility,best-practices,seo",
    "lighthouse:desktop": "lighthouse http://localhost:3000 --preset=desktop --view --only-categories=performance,accessibility,best-practices,seo",
    "analyze": "ANALYZE=true next build",
    "test:perf": "npm run build && npm run start & sleep 5 && npm run lighthouse"
  },
  "dependencies": {
    "next": "14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.294.0",
    "@heroicons/react": "^2.0.18",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "eslint": "^8.54.0",
    "eslint-config-next": "14.0.0",
    "typescript": "^5.2.2",
    "lighthouse": "^11.4.0",
    "@lhci/cli": "^0.12.0"
  }
}